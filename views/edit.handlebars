<div class="container mx-auto mt-5">
  <h2 class="text-center">更新資料表單</h2>
  <form action="/restaurants/{{restaurant.id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">餐廳名字</label>
      <input type="text" name="name" class="form-control" id="name" placeholder="餐廳名字" value="{{restaurant.name}}">
    </div>

    <div class="form-group">
      <label for="category">料理類別</label>
      <input type="text" name="category" class="form-control" id="category" placeholder="日本料理"
        value="{{restaurant.category}}">
    </div>

    <div class="form-group">
      <label for="phone">電話</label>
      <input type="text" name="phone" class="form-control" id="phone" placeholder="03 356 8602"
        value="{{restaurant.phone}}">
    </div>

    <div class="form-group">
      <label for="location">地址</label>
      <input type="text" name="location" class="form-control" id="location" placeholder="桃園市桃園區中正路1193號"
        value="{{restaurant.location}}">
    </div>

    <div class="form-group">
      <label for="rating">評價</label>
      <input type="text" name="rating" class="form-control" id="rating" placeholder="4.2" value="{{restaurant.rating}}">
    </div>

    <div class="form-group">
      <label for="image">餐廳圖片</label>
      <input type="text" name="image" class="form-control" id="image"
        placeholder="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5630/04.jpg"
        value="{{restaurant.image}}">
    </div>

    <div class="form-group">
      <label for="google_map">Google Map</label>
      <input type="text" name="google_map" class="form-control" id="google_map" placeholder="https://pse.is/EUC2Y"
        value="{{restaurant.google_map}}">
    </div>

    <div class="form-group">
      <label for="description">餐廳簡介</label>
      <textarea type="text" name="description" class="form-control" id="description" cols="50"
        rows="3">{{restaurant.description}}</textarea>
    </div>

    <div class="form-group">
      <button class="btn btn-outline-warning btn-block" type="submit">更新</button>
    </div>
  </form>
</div>