<div class="container mt-3">
  <form action="/restaurants/{{restaurant.id}}?_method=PUT" method="POST">
    <div class="row justify-content-around mb-3">
      <input class="puts col-4" type="text" placeholder="餐廳名字" name="name" value="{{restaurant.name}}">
      <input class="puts col-4" type="text" placeholder="料理類別" name="category" value="{{restaurant.category}}">
    </div>
    <div class="row justify-content-between mb-3">
      <input class="puts col-6" type="text" placeholder="圖片網址" name="image" value="{{restaurant.image}}">
      <input class="puts col-4" type="text" placeholder="Google地圖網址" name="google_map"
        value="{{restaurant.google_map}}">
    </div>
    <div class="row justify-content-between mb-3">
      <input class="puts col-2" type="text" placeholder="電話" name="phone" value="{{restaurant.phone}}">
      <input class="puts col-4" type="text" placeholder="地址" name="location" value="{{restaurant.location}}">
      <input class="puts col-2" type="text" placeholder="評價" name="rating" value="{{restaurant.rating}}">
    </div>
    <div class="row mb-3">
      <input class="puts col-12" type="text" placeholder="描述" name="description" value="{{restaurant.description}}">
    </div>
    <div class="row mb-3">
      <button class="puts col-2" type="submit">上傳</button>
      <span class="puts col-1 ml-auto"><a href="/">回到首頁</a></span>
    </div>
  </form>
</div>