<!-- search bar -->
<div class="container search-bar mb-3">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名字" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- create button and sort list -->
<div class="container mb-3">
  <div class="row">
    <div class="mx-auto">
      <a href="/restaurants/new" class="btn btn-outline-info">添加您喜愛的餐廳</a>
    </div>
    <div class="mx-auto">
      <div class="dropdown">
        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownButton" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">排序方式</button>
        <div class="dropdown-menu" aria-labelledby="dropdownButton">
          <a class="dropdown-item" href="/sort/rating">分數</a>
          <a class="dropdown-item" href="/sort/category">類別</a>
          <a class="dropdown-item" href="/sort/asc">名字(升冪)</a>
          <a class="dropdown-item" href="/sort/desc">名字(降冪)</a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mb-4">
  <div class="row">
    <div class="col-12 mx-auto">
      <div class="card-group">
        {{#each restaurants}}
        <div class="col-md-4 col-sm-6 col-12">
          <a href="/restaurants/{{this.id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div class="row justify-content-end">
                  <a href="/restaurants/{{this.id}}/edit" class="btn btn-success mr-1">編輯</a>
                  <form action="/restaurants/{{this.id}}/delete?_method=DELETE" method="POST">
                    <button class="btn btn-danger mr-2" type="submit">刪除</button>
                  </form>
                </div>
              </div>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>